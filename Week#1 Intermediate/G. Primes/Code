#include <cmath>
#include <iostream>
#include <set>
#include <vector>
 
using namespace std;
 
bool isPrime(int n){
 
    if (n <= 1)
        return false;
 
    if (n == 2)
        return true;
 
    if (n % 2 == 0)
        return false;
 
    for (int i = 3; i <= sqrt(n); i += 2)
    {
        if (n % i == 0)
            return false;
    }
 
    return true;
}
 
int main() {
 
    int n;
    cin >> n;
 
    if (isPrime(n-2))
        cout << n-2 << " "<< 2 << endl;
    else
        cout << -1 << endl;
 
}
